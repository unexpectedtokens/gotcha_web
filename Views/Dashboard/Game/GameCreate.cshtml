@using gotcha_web.Models;

@model gotcha_web.Forms.GameCreateForm


@{
    ViewData["NavDark"] = true;
    ViewData["Title"] = "Spel aanmaken";
}
<div class="container p2">
    <partial name="_Nav"></partial>
</div>


<div class="container p2">
    @using (Html.BeginForm("CreateGame", "Dashboard", FormMethod.Post)){
        <div class="formcontrol">
        <label>Naam van het spel:</label>
        @Html.TextBoxFor(m => m.Title);

    </div>
    <div class="formcontrol">
        <label>Beschrijving/uitleg:</label>
        @Html.TextAreaFor(m => m.Description);

    </div>
    <div class="formcontrol">
        <label>Regio:</label>
        @Html.TextBoxFor(m => m.Region)

    </div>
    <div class="formcontrol">
        <label>Speltype:</label>
        @Html.DropDownListFor(m => m.gametypeid, new SelectList(ViewBag.gametypes, "GameTypeId", "GameTypeName"));

    </div>
    <input type="submit" value="Maak spel aan"/>

    }
    


</div>


